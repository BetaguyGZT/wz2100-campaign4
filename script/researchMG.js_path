			enableResearch("R-Defense-Bunker2-MG5", selectedPlayer);
			enableResearch("R-Wpn-MG-ROF08", selectedPlayer);
			enableResearch("R-Wpn-MG-Accuracy08", selectedPlayer);
			enableResearch("R-Wpn-MG-Damage08", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Damage08")
		{
			enableResearch("R-Wpn-MG-Damage09", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Damage09")
		{
			enableResearch("R-Wpn-MG-Damage10", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Accuracy08")
		{
			enableResearch("R-Wpn-MG-Accuracy09", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Accuracy09")
		{
			enableResearch("R-Wpn-MG-Accuracy10", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-ROF08")
		{
			enableResearch("R-Wpn-MG-ROF09", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-ROF09")
		{
			enableResearch("R-Wpn-MG-ROF10", selectedPlayer);
		}

		if (research.name == "R-Wpn-MG-AntiTank")
		{
			enableResearch("R-Defense-WallTower-MG-AntiTank", selectedPlayer);
			enableResearch("R-Defense-Tower-MG-AntiTank", selectedPlayer);
			enableResearch("R-Defense-Bunker-MG-AntiTank", selectedPlayer);
			enableResearch("R-Wpn-MG-AntiTankTwin", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-AntiTankTwin")
		{
			enableResearch("R-Defense-WallTower-MG-AntiTankTwin", selectedPlayer);
			enableResearch("R-Defense-Tower-MG-AntiTankTwin", selectedPlayer);
			enableResearch("R-Defense-Bunker-MG-AntiTankTwin", selectedPlayer);
			enableResearch("R-Wpn-MG-AntiTank2", selectedPlayer);
		}
	
