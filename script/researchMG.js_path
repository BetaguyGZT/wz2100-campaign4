		{
			enableResearch("R-Defense-WallTower-MG-AntiTank2", selectedPlayer);
			enableResearch("R-Defense-Tower-MG-AntiTank2", selectedPlayer);
			enableResearch("R-Defense-Bunker-MG-AntiTank2", selectedPlayer);
			enableResearch("R-Wpn-MG-AntiTank2Twin", selectedPlayer);
			resPathMG=4; // Set us up for best weapon in class
		}
	
		if (research.name == "R-Wpn-MG-AntiTank2Twin")
		{
			enableResearch("R-Defense-WallTower-MG-AntiTank2Twin", selectedPlayer);
			enableResearch("R-Defense-Tower-MG-AntiTank2Twin", selectedPlayer);
			enableResearch("R-Defense-Bunker-MG-AntiTank2Twin", selectedPlayer);
		}
