// Weapons -- Machineguns
function eventResearched(research, structure)
{
	if (structure.player == selectedPlayer && research.done == true)
	{
		if (research.name == "R-PATH-Wpn-MG")
		{
			enableResearch("R-Wpn-MG1Mk1", selectedPlayer);
			resPathMG=1; // First upgrade set (1-3)
		}
	
		if (research.name == "R-Wpn-MG1Mk1")
		{
			//enableResearch("R-Defense-Tower-MG1", selectedPlayer); // prresearch.txt being weird again. 
			//enableResearch("R-Defense-Bunker-MG1", selectedPlayer);
			enableResearch("R-Wpn-MG-ROF01", selectedPlayer);
			enableResearch("R-Wpn-MG-Damage01", selectedPlayer);
			enableResearch("R-Wpn-MG-Accuracy01", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-ROF01")
		{
			enableResearch("R-Wpn-MG2Mk1", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Damage01")
		{
			enableResearch("R-Wpn-MG3Mk1", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG2Mk1")
		{
			enableResearch("R-Defense-Tower-MG2", selectedPlayer);
			enableResearch("R-Defense-Bunker-MG2", selectedPlayer);
			enableResearch("R-Wpn-MG-ROF02", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-ROF02")
		{
			enableResearch("R-Wpn-MG-ROF03", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG3Mk1")
		{
			enableResearch("R-Defense-Tower-MG3", selectedPlayer);
			enableResearch("R-Defense-Bunker-MG3", selectedPlayer);
			enableResearch("R-Defense-WallTower-MG3", selectedPlayer);
			enableResearch("R-Wpn-MG-Accuracy02", selectedPlayer);
			enableResearch("R-Wpn-MG-Damage02", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Damage02")
		{
			enableResearch("R-Wpn-MG3Twin", selectedPlayer);
			enableResearch("R-Wpn-MG-Accuracy03", selectedPlayer);
			enableResearch("R-Wpn-MG-Damage03", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG3Twin")
		{
			enableResearch("R-Defense-Bunker-MG3Twin", selectedPlayer);
			enableResearch("R-Defense-WallTower-MG3Twin", selectedPlayer);
			resPathMG=2; // Second set of upgrades
		}
		
		if (research.name == "R-Wpn-MG-Accuracy04")
		{
			enableResearch("R-Wpn-MG-Accuracy05", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Accuracy05")
		{
			enableResearch("R-Wpn-MG-Accuracy06", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Accuracy06")
		{
			enableResearch("R-Wpn-MG-Accuracy07", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Accuracy07")
		{
			enableResearch("R-Wpn-MG-Accuracy08", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Accuracy08")
		{
			enableResearch("R-Wpn-MG-Accuracy09", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Accuracy09")
		{
			enableResearch("R-Wpn-MG-Accuracy10", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-ROF04")
		{
			enableResearch("R-Wpn-MG-ROF05", selectedPlayer);
			enableResearch("R-Wpn-MG4", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-ROF05")
		{
			enableResearch("R-Wpn-MG-ROF06", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-ROF06")
		{
			resPathMG=3; // Third upgrade set
		}

		if (research.name == "R-Wpn-MG4")
		{
			enableResearch("R-Defense-WallTower2-MG4", selectedPlayer);
			enableResearch("R-Defense-Tower2-MG4", selectedPlayer);
			enableResearch("R-Defense-Bunker2-MG4", selectedPlayer);
			enableResearch("R-Wpn-MG-Damage05", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Damage05")
		{
			enableResearch("R-Wpn-MG-Damage06", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Damage06")
		{
			enableResearch("R-Wpn-MG-Damage07", selectedPlayer);
		}
	
		if (research.name == "R-Wpn-MG-Damage07")
		{
